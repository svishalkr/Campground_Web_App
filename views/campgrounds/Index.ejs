<!-- partials -->
<%- include ("../partials/header") %>


<div class="container">
    <header class="jumbotron">
        <div class="comtainer">
            <h1>Welcome to Campgrounds page !</h1>
            <p>
                view our camp grounds from all over the world
            </p>
            <p>
                <a class="btn btn-primary btn-lg" href="/campgrounds/new">Add new campgrounds </a>
            </p>
        </div>
    </header>

    <div class="row text-center" style="">
        <% campgrounds.forEach(function(arg1){ %>
        <div class="col-md-3 col-sm-6">
            <div class="thumbnail">
                <img src="<%= arg1.image%>" />
                <div class="caption">
                    <h4><%= arg1.name %></h4>
                </div>
                <p>
                    <a href="/campgrounds/<%=arg1._id%>" class="btn btn-primary">More info</a>
                </p>
            </div>
            <!-- <h4><%= arg1.name %></h4> -->
        </div>

        <% }); %>
    </div>
</div>
<%- include("../partials/footer") %>